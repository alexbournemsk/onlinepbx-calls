[Unit]
Description=PBX Calls Application
After=network.target

[Service]
Type=exec
User=www-data
Group=www-data
WorkingDirectory=/opt/pbx-calls
Environment=PATH=/opt/pbx-calls/venv/bin
ExecStart=/opt/pbx-calls/venv/bin/gunicorn --config gunicorn.conf.py wsgi:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
